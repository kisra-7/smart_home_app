<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
      IMPORTANT:
      Tuya/ThingClips BizBundle activities (e.g. ActivatorHomeActivity) require an
      AppCompat-descendant theme, otherwise they crash with:
      "You need to use a Theme.AppCompat theme (or descendant) with this activity."
    -->

    <!-- Main application theme used after launch -->
    <style name="NormalTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Theme used while Flutter is launching -->
    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

</resources>